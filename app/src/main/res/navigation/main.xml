<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.tjohnn.callmonitor.ui.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_callLogsFragment"
            app:destination="@id/callLogsFragment" />
    </fragment>

    <fragment
        android:id="@+id/callLogsFragment"
        android:name="com.tjohnn.callmonitor.ui.calllogs.CallLogsFragment"
        android:label="call_logs_fragment"
        tools:layout="@layout/fragment_call_logs" />

</navigation>
